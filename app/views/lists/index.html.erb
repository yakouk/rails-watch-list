<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.cinemonde.fr/medias-pages/cine-cluses/salle_1-20200626-131738.jpg);">
  <div class="container">
    <h1>Save any kind of movies</h1>
  </div>
</div>

<div class="container">
  <div class="d-flex justify-content-between mt-5 mb-3">
    <h2>My lists</h2>
    <%= link_to "Create a movie list", new_list_path, class: "btn btn-flat" %>
  </div>
  <div class="list-grid mb-5">
    <% @lists.each do |r| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://img.freepik.com/vecteurs-libre/illustration-cinema-plein-air_23-2148654778.jpg?w=1380&t=st=1687900306~exp=1687900906~hmac=e27544455a2860fe44ed0fcb644144a6b423cc1656b59a8919aa04f122b8f30f)">
        <%= link_to r.name, list_path(r), class: "list-card" %>
      </div>
    <% end %>
  </div>
</div>
